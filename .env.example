# Example environment variables for alx_travel_app
# Copy this file to `.env` and fill in the real values for production.

# Django secret
SECRET_KEY=change-me-to-a-secure-random-value

# Debug mode (True/False)
DEBUG=True

# Comma separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# Allow CORS origins during development
CORS_ALLOW_ALL_ORIGINS=True

# Database URL - use MySQL in production
# Example: mysql://user:password@db-host:3306/dbname
DATABASE_URL=mysql://myuser:mypassword@127.0.0.1:3306/alx_travel_db

# Celery broker URL (RabbitMQ)
# Example: amqp://user:password@rabbitmq-host:5672/vhost
CELERY_BROKER_URL=amqp://guest:guest@localhost:5672//
